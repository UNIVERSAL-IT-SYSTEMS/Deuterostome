#include "forms.h"
#include "ssh-password.h"
#include <stdio.h>

int main(int argc, char *argv[])
{

   fl_initialize(&argc, argv, 0, 0, 0);

   create_the_forms();

   /* fill-in form initialization code */
   if (argc != 2) {
       fprintf(stderr, "ssh-password received %d prompts\n", argc);
       return 1;
   }
   
   fl_set_object_label(prompt, argv[1]);

   /* show the first form */
   fl_show_form(passphrase,FL_PLACE_CENTER,FL_FULLBORDER,"passphrase");
   fl_do_forms();
   return 0;
}
