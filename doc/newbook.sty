\newenvironment{ctable*}[1]{%
  \def\newbook@ctable@star{\csname tabular*\endcsname{#1}}%
  \def\endnewbook@ctable@star{\csname endtabular*\endcsname}%
  \newbook@ctable%
}{%
  \endnewbook@ctable@int%
}
